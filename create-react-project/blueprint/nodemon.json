{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "modules/api",
    "modules/routes.js",
    "modules/server.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
